#cloud-config
users:
  - name: ubuntu
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    passwd: ${ssh_password}
    lock_passwd: false
ssh_pwauth: true

write_files:
  - path: /etc/ssh/sshd_config
    content: |
      Port 22
      ListenAddress 0.0.0.0
      PermitRootLogin no
      PubkeyAuthentication yes
      PasswordAuthentication yes
      ChallengeResponseAuthentication no
      UsePAM yes
      X11Forwarding yes
      PrintMotd no
      AcceptEnv LANG LC_*
      Subsystem sftp /usr/lib/openssh/sftp-server

runcmd:
  - sed -i 's/\${ssh_password}/'"$SSH_PASSWORD"'/' /etc/cloud/cloud.cfg.d/99_passwd.cfg
  - systemctl restart ssh